
@{
    ViewData["Title"] = "Create Table";
}

<h1>Create Table</h1>

<form method="post" action="/DataWarehouse/Data/CreateTableSubmit">
    <input type="text" name="tableName" />
    <button id="AddColumn" type="button">Add Column</button>
    <table>
        <thead>
            <tr>
                <th scope="col">Column</th>
                <th scope="col">Type</th>
                <th scope="col">Primary Key</th>
                <th scope="col">Not Null</th>
                <th scope="col">Unique</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody id="tbody"></tbody>
    </table>
    <button type="submit">Create Table</button>
</form>

@section Scripts {
    <script src="~/Areas/DataWarehouse/js/CreateTable.js"></script>
}