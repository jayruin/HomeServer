@model FileSystemNode
@{
    ViewData["Title"] = "Directory";
}

<h1>@Model.NodePath</h1>

<ul>
    @foreach (FileSystemNode childNode in Model.ChildNodes)
    {
        <li><a asp-area="FileManager" asp-controller="FileExplorer" asp-action="Browse" asp-route-base64Path="@childNode.NodePathBase64">@childNode.NodePath</a></li>
    }
</ul>
